{% extends "layout.html.njk" %}
{% block title %}Moje známky{% endblock %}

{% block content %}

<h2>Moje známky</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Predmet</th>
            <th>Známka</th>
            <th>Dátum</th>
            <th>Poznámka</th>
        </tr>
    </thead>
    <tbody>
        {% for g in grades %}
        <tr>
            <td>{{ g.subject }}</td>
            <td>
                {% if g.grade_value %}
                    {{ g.grade_value }}
                {% else %}
                    -
                {% endif %}
            </td>
            <td>
                {% if g.graded_at %}
                    {{ g.graded_at | formatDate("dd.MM.yyyy") }}
                {% else %}
                    -
                {% endif %}
            </td>
            <td>{{ g.note or '-' }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
