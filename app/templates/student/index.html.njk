{% extends "layout.html.njk" %}
{% block title %}Moje známky{% endblock %}

{% block content %}

<h2 class="mb-4">Moje známky</h2>

{% for subject, items in groupedGrades %}
    <div class="card mb-4 shadow-sm">
        <div class="card-header fw-bold">
            {{ subject }}
        </div>

        <div class="card-body p-0">
            {% if items | length == 0 %}
                <div class="p-3 text-muted">
                    Zatiaľ nemáš žiadne známky.
                </div>
            {% else %}
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Známka</th>
                            <th>Dátum</th>
                            <th>Poznámka</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for g in items %}
                            <tr>
                                <td class="fw-bold">{{ g.grade_value }}</td>
                                <td>{{ g.graded_at | formatDate("dd.MM.yyyy") }}</td>
                                <td>{{ g.note or '-' }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endfor %}

{% endblock %}
