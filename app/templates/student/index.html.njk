{% extends "layout.html.njk" %}
{% block title %}Moje známky{% endblock %}

{% macro sortLink(col) %}
  ?sort={{ col }}&dir={% if sort == col and dir == 'ASC' %}desc{% else %}asc{% endif %}
{% endmacro %}

{% block content %}

<h2 class="mb-4">Moje známky</h2>

{% for subject, items in groupedGrades %}
    <div class="card mb-4 shadow-sm">
        <div class="card-header fw-bold">
            {{ subject }}
        </div>

        <div class="card-body p-0">
            {% if items | length == 0 %}
                <div class="p-3 text-muted">
                    Zatiaľ nemáš žiadne známky.
                </div>
            {% else %}
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>
                                <a href="{{ sortLink('grade_value') }}" class="text-decoration-none">
                                    Známka
                                    {% if sort == 'grade_value' %}
                                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                                    {% endif %}
                                </a>
                            </th>

                            <th>
                                <a href="{{ sortLink('graded_at') }}" class="text-decoration-none">
                                    Dátum
                                    {% if sort == 'graded_at' %}
                                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                                    {% endif %}
                                </a>
                            </th>

                            <th>Poznámka</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for g in items %}
                            <tr>
                                <td class="fw-bold">{{ g.grade_value }}</td>
                                <td>{{ g.graded_at | formatDate("dd.MM.yyyy") }}</td>
                                <td>
                                    {% if g.note %}
                                        {{ g.note }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endfor %}

{% endblock %}
