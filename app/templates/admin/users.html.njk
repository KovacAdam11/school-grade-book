{% extends "layout.html.njk" %}
{% block title %}Admin – používatelia{% endblock %}

{% macro sortLink(col) %}
  ?sort={{ col }}&dir={% if sort == col and dir == 'ASC' %}desc{% else %}asc{% endif %}
{% endmacro %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Admin – zoznam používateľov</h1>

    <a href="/admin/user/create" class="btn btn-success">
        + Nový používateľ
    </a>
</div>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>
                <a href="{{ sortLink('id') }}" class="text-decoration-none">
                    ID
                    {% if sort == 'id' %}
                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                    {% endif %}
                </a>
            </th>

            <th>
                <a href="{{ sortLink('username') }}" class="text-decoration-none">
                    Username
                    {% if sort == 'username' %}
                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                    {% endif %}
                </a>
            </th>

            <th>
                <a href="{{ sortLink('first_name') }}" class="text-decoration-none">
                    Meno
                    {% if sort == 'first_name' %}
                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                    {% endif %}
                </a>
            </th>

            <th>
                <a href="{{ sortLink('last_name') }}" class="text-decoration-none">
                    Priezvisko
                    {% if sort == 'last_name' %}
                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                    {% endif %}
                </a>
            </th>

            <th>
                <a href="{{ sortLink('role') }}" class="text-decoration-none">
                    Rola
                    {% if sort == 'role' %}
                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                    {% endif %}
                </a>
            </th>

            <th>
                <a href="{{ sortLink('grade_year') }}" class="text-decoration-none">
                    Trieda
                    {% if sort == 'grade_year' %}
                        {% if dir == 'ASC' %}▲{% else %}▼{% endif %}
                    {% endif %}
                </a>
            </th>

            <th style="width: 180px;">Akcie</th>
        </tr>
    </thead>
    <tbody>

        {% for u in users %}
        <tr>
            <td>{{ u.id }}</td>
            <td>{{ u.username }}</td>
            <td>{{ u.first_name }}</td>
            <td>{{ u.last_name }}</td>
            <td>{{ u.role }}</td>
            <td>
                {% if u.grade_year %}
                    {{ u.grade_year }}.{{ u.name_letter }}
                {% else %}
                    -
                {% endif %}
            </td>

            <td class="text-center">
                <a href="/admin/user/{{ u.id }}/edit"
                   class="btn btn-sm btn-primary me-1">
                    Upraviť
                </a>

                {% if u.role == 'ADMIN' %}
                    <button class="btn btn-sm btn-secondary" disabled
                            title="Administrátora nie je možné zmazať">
                        Zmazať
                    </button>
                {% else %}
                    <form method="post"
                          action="/admin/user/{{ u.id }}/delete"
                          style="display:inline"
                          onsubmit="return confirm('Naozaj chceš zmazať používateľa {{ u.username }}?');">
                        <button class="btn btn-sm btn-danger">
                            Zmazať
                        </button>
                    </form>
                {% endif %}
            </td>
        </tr>

        {% else %}
        <tr>
            <td colspan="7" class="text-center text-muted py-4">
                Žiadni používatelia
            </td>
        </tr>
        {% endfor %}

    </tbody>
</table>

{% endblock %}
