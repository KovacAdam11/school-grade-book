{% extends "layout.html.njk" %}
{% block title %}Admin – Triedy{% endblock %}

{% block content %}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Triedy</h1>
    <a href="/admin/classes/create" class="btn btn-success">
        + Nová trieda
    </a>
</div>

{% if flash.error %}
<div class="alert alert-danger">{{ flash.error[0] }}</div>
{% endif %}

{% if flash.success %}
<div class="alert alert-success">{{ flash.success[0] }}</div>
{% endif %}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Trieda</th>
            <th class="text-center">Počet žiakov</th>
            <th style="width:160px">Akcie</th>
        </tr>
    </thead>
    <tbody>

    {% for c in classes %}
    <tr>
        <td>{{ c.grade_year }}.{{ c.name_letter }}</td>
        <td class="text-center">{{ c.student_count }}</td>
        <td>
            <a href="/admin/classes/{{ c.id }}/edit"
               class="btn btn-sm btn-primary me-1">
                Upraviť
            </a>

            {% if c.student_count == 0 %}
            <form method="post"
                  action="/admin/classes/{{ c.id }}/delete"
                  style="display:inline"
                  onsubmit="return confirm('Naozaj zmazať triedu?');">
                <button class="btn btn-sm btn-danger">Zmazať</button>
            </form>
            {% else %}
            <button class="btn btn-sm btn-secondary" disabled>
                Zmazať
            </button>
            {% endif %}
        </td>
    </tr>
    {% endfor %}

    </tbody>
</table>

{% endblock %}
