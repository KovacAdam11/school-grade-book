{% extends "layout.html.njk" %}
{% block title %}Upraviť používateľa{% endblock %}

{% block content %}

<h2 class="mb-4">Upraviť používateľa</h2>

<form method="post" action="/admin/user/{{ user.id }}/edit" class="row g-3">

    <div class="col-md-6">
        <label class="form-label">Meno</label>
        <input type="text" name="first_name" class="form-control"
               value="{{ user.first_name }}" required>
    </div>

    <div class="col-md-6">
        <label class="form-label">Priezvisko</label>
        <input type="text" name="last_name" class="form-control"
               value="{{ user.last_name }}" required>
    </div>

    <div class="col-md-4">
        <label class="form-label">Rola</label>
        <select name="role_id" class="form-select" required>
            {% for r in roles %}
                <option value="{{ r.id }}"
                    {% if r.id == user.role_id %}selected{% endif %}>
                    {{ r.name }}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="col-md-4">
        <label class="form-label">Trieda (len pre žiaka)</label>
        <select name="class_id" class="form-select">
            <option value="">— bez triedy —</option>
            {% for c in classes %}
                <option value="{{ c.id }}"
                    {% if c.id == user.class_id %}selected{% endif %}>
                    {{ c.grade_year }}.{{ c.name_letter }}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="col-md-12">
        <button class="btn btn-primary">
            Uložiť zmeny
        </button>
        <a href="/admin" class="btn btn-secondary ms-2">
            Späť
        </a>
    </div>

</form>

{% endblock %}
